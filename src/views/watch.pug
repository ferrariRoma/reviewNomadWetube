extends base
include mixins/video

block content 
    if err 
        h1=err.message 
    else
        div 
            h3 `Video Title: #{video.title}`
            if (video.meta.views === 0 || video.meta.views === 1)
                samll #{video.meta.views} view
            else
                samll #{video.meta.views} views
            br
            a(href=`${video.id}/edit`) Edit &rarr;
        
        each info in otherVideo
            +video(info)
        else 
            h3 No Commend
