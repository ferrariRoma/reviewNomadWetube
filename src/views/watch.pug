extends base
include mixins/video

block content 
    div 
        h3 `Video Title: #{video.title}`
        if(video.views !== 0)
            samll #{video.views} #{video.views === 1 ? "view" : "views"}
        br
        a(href=+video.id+"/edit") Edit &rarr;
    
    each info in fakeVideos
        +video(info)
