extends base

block content 
        if error
            h1=error
        form(method="POST", action="/join")
            if email
                input(name="email",placeholder="E-mail", type="email", required, value=email)
                input(name="username",placeholder="username", type="text", required, maxlength=20, value=nickname)
            else
                input(name="email",placeholder="E-mail", type="email", required)
                input(name="username",placeholder="username", type="text", required, maxlength=20)
            small 대・소문자, 숫자, 특수문자를 모두 사용
            input(name="password",placeholder="password", type="password", required, maxlength=30, minlength=8)
            input(name="password2",placeholder="Confirm password", type="password", required, maxlength=30, minlength=8)
            button Join
        include partials/social-login